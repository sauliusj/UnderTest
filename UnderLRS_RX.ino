  display.print("RSSI: ");
  display.println(LoRa.packetRssi());
  

// try to parse packet
  int packetSize = LoRa.parsePacket();
  if (packetSize) {
    // received a packet
    Serial.print("Received packet '");

    // read packet
    while (LoRa.available()) {
      A = (char)LoRa.read();
      Serial.print(A);
      display.print(A);
    }

    // print RSSI of packet
    Serial.print("' with RSSI ");
    Serial.println(LoRa.packetRssi());
    display.display();
  delay(1000);
  }else 
  display.display();
}


